# ═══════════════════════════════════════════════
# VPN Bot — Environment Configuration
# Copy to .env and fill in your values
# ═══════════════════════════════════════════════

# ── Telegram ───────────────────────────────────
BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
ADMIN_IDS=123456789,987654321
WEBHOOK_SECRET=your-random-webhook-secret
WEBHOOK_URL=                  # empty = polling mode

# ── Database ───────────────────────────────────
DATABASE_URL=postgresql+asyncpg://vpnbot:secret@postgres:5432/vpnbot

# ── Redis ──────────────────────────────────────
REDIS_URL=redis://redis:6379/0

# ── 3x-ui Panel ───────────────────────────────
XUI_BASE_URL=https://panel.yourdomain.com:54321
XUI_USERNAME=admin
XUI_PASSWORD=your-panel-password
XUI_SSL_VERIFY=true
XUI_TIMEOUT=15
XUI_RETRY_ATTEMPTS=3
XUI_INBOUND_CACHE_TTL=60

# ── Subscription Domain ───────────────────────
SUBSCRIPTION_DOMAIN=sub.yourdomain.com

# ── CryptoBot ─────────────────────────────────
CRYPTOBOT_TOKEN=your-cryptobot-token
CRYPTOBOT_NETWORK=mainnet

# ── Pricing ───────────────────────────────────
STARS_7_DAYS=10
STARS_30_DAYS=11
CRYPTO_7_DAYS=1.0
CRYPTO_30_DAYS=3.0

# ── Rate Limiting ─────────────────────────────
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_BURST=5

# ── Health Check ──────────────────────────────
HEALTH_PORT=8080
